<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/artistsFragment">

    <fragment
        android:id="@+id/topFragment"
        android:name="com.example.contestifyfirsttry.TopFragment"
        android:label="fragment_top"
        tools:layout="@layout/fragment_top">

        <action
            android:id="@+id/action_topFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_topFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_topFragment_to_itemDetailedFragment"
            app:destination="@id/itemDetailedFragment">

        </action>
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.contestifyfirsttry.RecentFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_recent">
        <action
            android:id="@+id/action_searchFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_searchFragment_to_topFragment"
            app:destination="@id/topFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.contestifyfirsttry.Profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_profileFragment_to_topFragment"
            app:destination="@id/topFragment" />
    </fragment>
    <fragment
        android:id="@+id/itemDetailedFragment"
        android:name="com.example.contestifyfirsttry.ItemDetailedFragment"
        android:label="fragment_item_detailed"
        tools:layout="@layout/fragment_item_detailed">

    </fragment>
    <fragment
        android:id="@+id/artistsFragment"
        android:name="com.example.contestifyfirsttry.ArtistsFragment"
        android:label="artists_fragment"
        tools:layout="@layout/artists_fragment" >

        <action
            android:id="@+id/action_artistsFragment_to_itemDetailedFragment"
            app:destination="@id/itemDetailedFragment" >

        </action>
    </fragment>

</navigation>