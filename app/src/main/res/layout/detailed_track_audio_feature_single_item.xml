<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dip"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="150dp"
        android:layout_height="190dp"
        android:padding="5dp"
        android:background="@drawable/cardview_background">
        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/pbTrackAudioFeature"
            app:cpb_background_progressbar_color="@color/colorgray"
            app:cpb_background_progressbar_width="5dp"
            app:cpb_progress_direction="to_right"
            app:cpb_progressbar_color="@color/colorAccent"
            app:cpb_progressbar_width="10dp"
            app:cpb_round_border="false" />
        <TextView
            android:id="@+id/tvTrackAudioFeature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Energetic"
            android:textSize="20sp"
            android:layout_below="@+id/pbTrackAudioFeature"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>