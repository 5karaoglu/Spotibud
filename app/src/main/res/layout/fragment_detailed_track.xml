<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailed.DetailedTrackFragment"
    android:background="@color/colorPrimaryDark">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarDetailedTrack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarTrack"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                app:layout_collapseMode="parallax"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:minHeight="50dp"
                android:src="@mipmap/ic_launcher"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"/>
            <ImageView
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="bottom"
                app:layout_collapseMode="pin"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:minHeight="50dp"
                android:src="@drawable/shadow"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"/>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/tvParallaxHeaderTrack"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:layout_gravity="bottom|center_horizontal"
                android:gravity="bottom|center_horizontal"
                android:textSize="40sp"
                android:ellipsize="end"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="50sp"
                android:autoSizeMinTextSize="30sp"
                android:maxLines="2"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                app:layout_collapseMode="parallax"/>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/detailedToolbarTrack"
                android:layout_width="match_parent"
                app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"
                app:titleTextColor="@android:color/white"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:layout_collapseMode="pin"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <ProgressBar
        android:id="@+id/pbDetailedTrack"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDetailedTrack"
        android:visibility="gone"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_spotify"
        android:backgroundTint="@color/colorPrimary"
        app:borderWidth="0dp"
        app:maxImageSize="40dp"
        app:fabCustomSize="60dp" />
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsvDetailedTrack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
>
        <RelativeLayout
            android:id="@+id/reLayoutDetailedTrack"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/reLayoutInfo">
            <TextView
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dt_info_header"
                android:gravity="start"
                android:textSize="20sp"
                android:id="@+id/tvRecommendations"
                android:scrollbars="none"
                android:textColor="@color/white"
                android:textStyle="normal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:layout_margin="5dp"
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/cardview_background2">
                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="03:26"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="20sp"
                        android:autoSizeMaxTextSize="35sp"
                        android:autoSizeStepGranularity="1dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        />
                    <TextView
                        android:id="@+id/tvDurationText"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="duration"
                        android:textColor="@color/colorgray2"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="20sp"
                        android:autoSizeMaxTextSize="28sp"
                        android:autoSizeStepGranularity="1dp"
                        android:gravity="center"
                        android:textStyle="bold"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/cardview_background2"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvTempo"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="85 bpm"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="20sp"
                        android:autoSizeMaxTextSize="35sp"
                        android:autoSizeStepGranularity="1dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        />
                    <TextView
                        android:id="@+id/tvTempoText"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="tempo"
                        android:textColor="@color/colorgray2"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="20sp"
                        android:autoSizeMaxTextSize="30sp"
                        android:autoSizeStepGranularity="1dp"
                        android:gravity="center"
                        android:textStyle="bold"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/cardview_background2"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvKey"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="F#"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="20sp"
                        android:autoSizeMaxTextSize="35sp"
                        android:autoSizeStepGranularity="1dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        />
                    <TextView
                        android:id="@+id/tvKeyText"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="key"
                        android:textColor="@color/colorgray2"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="20sp"
                        android:autoSizeMaxTextSize="30sp"
                        android:autoSizeStepGranularity="1dp"
                        android:gravity="center"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_below="@id/reLayoutInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reLayoutFeatures">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/reLayoutDanceability">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/danceability"
                        android:textColor="@color/white"
                        android:id="@+id/tvDanceability"/>
                    <ProgressBar
                        android:layout_below="@id/tvDanceability"
                        android:id="@+id/pbDanceability"
                        android:layout_width="170dp"
                        android:layout_height="20dp"
                        android:progressBackgroundTint="@color/colorgray2"
                        android:progressTint="@color/colorAccent"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:max="100"
                        android:progress="50"
                        android:scaleY="1"
                        android:indeterminateOnly="false"
                        android:scrollbarSize="300dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/reLayoutAcousticness"
                    android:layout_alignParentEnd="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/acousticness"
                        android:textColor="@color/white"
                        android:id="@+id/tvAcousticness"/>
                    <ProgressBar
                        android:layout_below="@id/tvAcousticness"
                        android:id="@+id/pbAcousticness"
                        android:layout_width="170dp"
                        android:layout_height="20dp"
                        android:progressBackgroundTint="@color/colorgray2"
                        android:progressTint="@color/colorAccent"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:max="100"
                        android:progress="50"
                        android:scaleY="1"
                        android:indeterminateOnly="false"
                        android:scrollbarSize="300dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/reLayoutDanceability"
                    android:id="@+id/reLayoutEnergy">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/energy"
                        android:textColor="@color/white"
                        android:id="@+id/tvEnergy"/>
                    <ProgressBar
                        android:layout_below="@id/tvEnergy"
                        android:id="@+id/pbEnergy"
                        android:layout_width="170dp"
                        android:layout_height="20dp"
                        android:progressBackgroundTint="@color/colorgray2"
                        android:progressTint="@color/colorAccent"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:max="100"
                        android:progress="50"
                        android:scaleY="1"
                        android:indeterminateOnly="false"
                        android:scrollbarSize="300dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/reLayoutAcousticness"
                    android:id="@+id/reLayoutInstrumentalness"
                    android:layout_alignParentEnd="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/instrumentalness"
                        android:textColor="@color/white"
                        android:id="@+id/tvInstrumentalness"/>
                    <ProgressBar
                        android:layout_below="@id/tvInstrumentalness"
                        android:id="@+id/pbInstrumentalness"
                        android:layout_width="170dp"
                        android:layout_height="20dp"
                        android:progressBackgroundTint="@color/colorgray2"
                        android:progressTint="@color/colorAccent"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:max="100"
                        android:progress="50"
                        android:scaleY="1"
                        android:indeterminateOnly="false"
                        android:scrollbarSize="300dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/reLayoutEnergy"
                    android:id="@+id/reLayoutLiveness">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/liveness"
                        android:textColor="@color/white"
                        android:id="@+id/tvLiveness"/>
                    <ProgressBar
                        android:layout_below="@id/tvLiveness"
                        android:id="@+id/pbLiveness"
                        android:layout_width="170dp"
                        android:layout_height="20dp"
                        android:progressBackgroundTint="@color/colorgray2"
                        android:progressTint="@color/colorAccent"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:max="100"
                        android:progress="50"
                        android:scaleY="1"
                        android:indeterminateOnly="false"
                        android:scrollbarSize="300dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/reLayoutSpeechiness"
                    android:layout_below="@id/reLayoutInstrumentalness"
                    android:layout_alignParentEnd="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/speechiness"
                        android:textColor="@color/white"
                        android:id="@+id/tvSpeechiness"/>
                    <ProgressBar
                        android:layout_below="@id/tvSpeechiness"
                        android:id="@+id/pbSpeechiness"
                        android:layout_width="170dp"
                        android:layout_height="20dp"
                        android:progressBackgroundTint="@color/colorgray2"
                        android:progressTint="@color/colorAccent"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:max="100"
                        android:progress="50"
                        android:scaleY="1"
                        android:indeterminateOnly="false"
                        android:scrollbarSize="300dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/reLayoutLiveness"
                    android:id="@+id/reLayoutValence">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/valence"
                        android:textColor="@color/white"
                        android:id="@+id/tvValence"/>
                    <ProgressBar
                        android:layout_below="@id/tvValence"
                        android:id="@+id/pbValence"
                        android:layout_width="170dp"
                        android:layout_height="20dp"
                        android:progressBackgroundTint="@color/colorgray2"
                        android:progressTint="@color/colorAccent"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:max="100"
                        android:progress="50"
                        android:scaleY="1"
                        android:indeterminateOnly="false"
                        android:scrollbarSize="300dp"/>
                </RelativeLayout>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerTrackArtist"
                android:layout_below="@+id/reLayoutFeatures"
                tools:listitem="@layout/detailed_track_layout_artist_single_item"
                tools:itemCount="1"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dip"
                android:id="@+id/reLayoutAlbum"
                android:layout_below="@+id/recyclerTrackArtist"
                android:layout_margin="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageViewAlbum"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_launcher_foreground" />

                    <TextView
                        android:padding="2dp"
                        android:id="@+id/textViewAlbumName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:shadowColor="@color/black"
                        android:shadowDx="4"
                        android:shadowDy="4"
                        android:shadowRadius="4"
                        android:textColor="@color/white"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="25sp"
                        android:autoSizeMinTextSize="15sp"
                        android:textStyle="normal" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>