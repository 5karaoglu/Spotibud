<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailed.DetailedTrackFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorPrimaryDark"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                app:layout_collapseMode="parallax"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:minHeight="50dp"
                android:src="@mipmap/ic_launcher"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"/>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/detailedTrackToolbar"
                android:layout_width="match_parent"
                app:titleTextAppearance="@style/TextAppearance.AppCompat.Title"
                app:titleTextColor="@android:color/white"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways"
                app:title="HEADER" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/pagerDetailedArtist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cardview_background"
                android:id="@+id/reLayoutFeatures">
                <TableRow
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:layout_height="120dp"
                        android:layout_width="80dp"
                        android:padding="2dp">
                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:layout_margin="5dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/pbDanceability"
                            app:cpb_background_progressbar_color="@color/colorgray2"
                            app:cpb_background_progressbar_width="5dp"
                            app:cpb_progress_direction="to_right"
                            app:cpb_progressbar_color="@color/colorAccent"
                            app:cpb_progressbar_width="7dp"
                            app:cpb_round_border="false"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:maxLines="1"
                            android:layout_below="@id/pbDanceability"
                            android:text="@string/danceability"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeMaxTextSize="20sp"
                            android:autoSizeStepGranularity="2sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_height="120dp"
                        android:layout_width="80dp"
                        android:padding="2dp">
                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:layout_margin="5dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/pbEnergy"
                            app:cpb_background_progressbar_color="@color/colorgray2"
                            app:cpb_background_progressbar_width="5dp"
                            app:cpb_progress_direction="to_right"
                            app:cpb_progressbar_color="@color/colorAccent"
                            app:cpb_progressbar_width="7dp"
                            app:cpb_round_border="false"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:maxLines="1"
                            android:layout_below="@id/pbEnergy"
                            android:text="@string/energy"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeMaxTextSize="20sp"
                            android:autoSizeStepGranularity="2sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_height="120dp"
                        android:layout_width="80dp"
                        android:padding="2dp">
                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:layout_margin="5dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/pbLoudness"
                            app:cpb_background_progressbar_color="@color/colorgray2"
                            app:cpb_background_progressbar_width="5dp"
                            app:cpb_progress_direction="to_right"
                            app:cpb_progressbar_color="@color/colorAccent"
                            app:cpb_progressbar_width="7dp"
                            app:cpb_round_border="false"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:maxLines="1"
                            android:layout_below="@id/pbLoudness"
                            android:text="@string/loudness"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeMaxTextSize="20sp"
                            android:autoSizeStepGranularity="2sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_height="120dp"
                        android:layout_width="80dp"
                        android:padding="2dp">
                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:layout_margin="5dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/pbSpeechiness"
                            app:cpb_background_progressbar_color="@color/colorgray2"
                            app:cpb_background_progressbar_width="5dp"
                            app:cpb_progress_direction="to_right"
                            app:cpb_progressbar_color="@color/colorAccent"
                            app:cpb_progressbar_width="7dp"
                            app:cpb_round_border="false"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:maxLines="1"
                            android:layout_below="@id/pbSpeechiness"
                            android:text="@string/speechiness"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeMaxTextSize="20sp"
                            android:autoSizeStepGranularity="2sp"/>
                    </RelativeLayout>
                </TableRow>
                <TableRow
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:layout_height="120dp"
                        android:layout_width="80dp"
                        android:padding="2dp">
                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:layout_margin="5dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/pbAcousticness"
                            app:cpb_background_progressbar_color="@color/colorgray2"
                            app:cpb_background_progressbar_width="5dp"
                            app:cpb_progress_direction="to_right"
                            app:cpb_progressbar_color="@color/colorAccent"
                            app:cpb_progressbar_width="7dp"
                            app:cpb_round_border="false"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:maxLines="1"
                            android:layout_below="@id/pbAcousticness"
                            android:text="@string/acousticness"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeMaxTextSize="20sp"
                            android:autoSizeStepGranularity="2sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_height="120dp"
                        android:layout_width="80dp"
                        android:padding="2dp">
                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:layout_margin="5dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/pbInstrumentalness"
                            app:cpb_background_progressbar_color="@color/colorgray2"
                            app:cpb_background_progressbar_width="5dp"
                            app:cpb_progress_direction="to_right"
                            app:cpb_progressbar_color="@color/colorAccent"
                            app:cpb_progressbar_width="7dp"
                            app:cpb_round_border="false"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/pbInstrumentalness"
                            android:text="@string/instrumentalness"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="20sp"
                            android:autoSizeStepGranularity="2sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_height="120dp"
                        android:layout_width="80dp"
                        android:padding="2dp">
                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:layout_margin="5dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/pbLiveness"
                            app:cpb_background_progressbar_color="@color/colorgray2"
                            app:cpb_background_progressbar_width="5dp"
                            app:cpb_progress_direction="to_right"
                            app:cpb_progressbar_color="@color/colorAccent"
                            app:cpb_progressbar_width="7dp"
                            app:cpb_round_border="false"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/pbLiveness"
                            android:maxLines="1"
                            android:text="@string/liveness"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeMaxTextSize="20sp"
                            android:autoSizeStepGranularity="2sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_height="120dp"
                        android:layout_width="80dp"
                        android:padding="2dp">
                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:layout_margin="5dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/pbValence"
                            app:cpb_background_progressbar_color="@color/colorgray2"
                            app:cpb_background_progressbar_width="5dp"
                            app:cpb_progress_direction="to_right"
                            app:cpb_progressbar_color="@color/colorAccent"
                            app:cpb_progressbar_width="7dp"
                            app:cpb_round_border="false"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/pbValence"
                            android:maxLines="1"
                            android:text="@string/valence"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeMaxTextSize="20sp"
                            android:autoSizeStepGranularity="2sp"/>
                    </RelativeLayout>
                </TableRow>
            </TableLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dip"
                android:id="@+id/reLayoutArtist"
                android:layout_below="@id/reLayoutFeatures">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/imageViewArtist"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_launcher_foreground" />

                    <TextView
                        android:id="@+id/textViewArtistName"
                        android:layout_width="155dp"
                        android:layout_height="89dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="2dp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:shadowColor="@color/black"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="4"
                        android:text="Arctic Monkeys"
                        android:textColor="@color/white"
                        android:textSize="35sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dip"
                android:id="@+id/reLayoutAlbum"
                android:layout_below="@+id/reLayoutArtist">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/imageViewAlbum"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_launcher_foreground" />

                    <TextView
                        android:id="@+id/textViewAlbumName"
                        android:layout_width="155dp"
                        android:layout_height="89dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="2dp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:shadowColor="@color/black"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="4"
                        android:text="Arctic Monkeys"
                        android:textColor="@color/white"
                        android:textSize="35sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>